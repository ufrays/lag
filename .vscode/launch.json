{
  "version": "0.2.0",
  "configurations": [
    {
      "command": "npm run validateConfig",
      "name": "Run npm validation config",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "type": "node",
      "name": "jest",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--watchAll=false",
        "--detectOpenHandles"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "envFile": "${workspaceFolder}/.env",
      "disableOptimisticBPs": true,
      "outputCapture": "std"
    },
    {
      "name": "cds run",
      "program": "${workspaceFolder}/node_modules/.bin/cds-ts",
      "request": "launch",
      "envFile": "${workspaceFolder}/.env",
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "args": [
        "run",
        "--with-mocks",
        "--in-memory?"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    }
  ]
}